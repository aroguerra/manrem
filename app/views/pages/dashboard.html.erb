<div class="container">
  <div class="row">
    <h1>Dashboard <img src="https://img.icons8.com/ios/35/000000/menu-filled.png"></h1>
  </div>
  <div class="row">
    <h3>My Simulations</h3>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="info">
          <p>Pool Market - Sym</p>
          <h1> <%=  @my_simulations_pool_sym.count %> </h1>
          <p> Simulations</p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="info">
          <p>Pool Market - ASym</p>
          <h1> <%= @my_simulations_pool_asym.count %> </h1>
          <p> Simulations </p>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="info">
          <p>Balance Market - Secondary</p>
          <h1> <%=  @my_simulations_bm_sec.count %> </h1>
          <p> Simulations</p>
        </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-3">
      <div class="info">
          <p>Balance Market - Terciary</p>
          <h1> <%=  0 %> </h1>
          <p> Simulations</p>
        </div>
    </div>
  </div>
  <div class= "row">
    <div class="btn-landing">
        <%=link_to 'Simulate Pool Market', participants_path  %>
    </div>
    <div class="btn-landing">
        <%=link_to 'Simulate Balance Market', participantsbm_path  %>
    </div>
  </div>
  <br>
  <br>
  <div class="row">
    <h3>My Agents</h3>
  </div>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="info">
            <p>Buyers</p>
            <h1> <%=  @my_buyers.count %> </h1>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="info">
            <p>Sellers</p>
            <h1> <%= @my_sellers.count %> </h1>
        </div>
      </div>

    </div>
  <div class="btn-landing">
    <%=link_to 'My Agents', agents_path%>
  </div>
</div>


